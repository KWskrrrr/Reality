/* pages/my/my.wxss */
.bg{
      width: 100%;
      height: 500rpx;
      position: relative;
}
.bg image{
      width: 100%;
      position: absolute;
      top: 0;
      left: 0;
      z-index: 0;
}
.userInfo{
      position: absolute;
      bottom: 10%;
      left: 40%;
      z-index: 1;
      display: flex;
      flex-direction: column;
      align-items: center;
}

.avator {
      width: 140rpx;
      height: 140rpx;
      border-radius: 50%;
      overflow: hidden;
}
.avator image{
      width: 140rpx;
      height: 140rpx;
      border-radius: 50%;
}

.center_box {
      width: 100%;
      padding: 20rpx 0;
      height: 200rpx;
      display: flex;
      align-items: center;
      justify-content: space-around;
      box-sizing: border-box;
}

.center_1 {
      width: 160rpx;
      height: 160rpx;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
}

.center_1 view {
      font-size: 26rpx;
      padding-top: 20rpx;
}

.center_1 image {
      width: 60rpx;
      height: 60rpx;
}


.bottom_box {
      width: 100%;
      display: flex;
      box-sizing: border-box;
      padding: 0 40rpx;
      flex-direction: column;
}

.bottom_card {
      position: relative;
      width: 100%;
      height: 124rpx;
      display: flex;
      align-items: center;
      justify-content: space-between;
      border-bottom: 1rpx solid #eee;
      background: #fff;
}
.bottom_card button{
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      opacity: 0.01;
}
.bottom_card image {
      width: 14rpx;
      height: 25rpx;
}

.bottom_1 {
      display: flex;
      height: 100%;
      align-items: center;
}

.bottom_1 image {
      width: 40rpx;
      height: 40rpx;
}

.bottom_1 view {
      font-size: 30rpx;
      letter-spacing: 3rpx;
      padding-left: 30rpx;
}
