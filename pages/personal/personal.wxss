/* pages/personal/personal.wxss */
.bg{
  width: 100%;
  height: 500rpx;
  position: relative;
}
.bg image{
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 0;
}
.userInfo{
  position: absolute;
  bottom: 18%;
  left: 40%;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.avatar image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}
.nickName{
  margin: 10rpx 0;
}
.btn{
  width: 130rpx;
  height: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  color: #fff;
  background: #ff6029;
  font-size: 26rpx;
  border-radius: 50rpx;
}

.center_box {
  width: 100%;
  height: 150rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
}

.center_1 {
  width: 50%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.center_1 view {
  font-size: 26rpx;
  padding-top: 20rpx;
}

.center_1 image {
  width: 60rpx;
  height: 60rpx;
}


.bottom_box {
  width: 100%;
  height: 600rpx;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  background: #eee;
}

.bottom_card {
  position: relative;
  width: 100%;
  height: 124rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-left: 30rpx;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.bottom_card image {
  width: 14rpx;
  height: 25rpx;
  margin-right: 60rpx;
}

.bottom_1 {
  display: flex;
  height: 100%;
  align-items: center;
}

.bottom_1 image {
  width: 40rpx;
  height: 40rpx;
}

.bottom_1 view {
  font-size: 30rpx;
  letter-spacing: 3rpx;
  padding-left: 30rpx;
}

.fix_box{
  position: fixed;
  width: 100%;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
}
.fix_1{
  width: 50%;
  text-align: center;
  color: #ff6029;
  border-right: 2rpx solid #eee;
  font-weight: bold;
  padding-bottom: 15rpx;
}
.fix_2{
  width: 50%;
  padding-bottom: 15rpx;
  font-weight: bold;
  text-align: center;
  color: #999;
}