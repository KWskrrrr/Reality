/* pages/list/list.wxss */
.nav {
      width: 100%;
      height: 90rpx;
      display: flex;
      align-items: center;
      justify-content: space-around;
}

.nav-item {
  width: 50%;
  height: 100%;
  font-size: 32rpx;
  display: inline-block;
}

.nav-text {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      letter-spacing: 4rpx;
      box-sizing: border-box;
}

.tab-on {
      color: #FF6029;
      font-size: 32rpx !important;
      font-weight: 600;
      border-bottom: 4rpx solid #FF6029 !important;
}
.list_item{
  display: flex;
  width: 100%;
  height: 120rpx;
  justify-content: space-around;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}
.list_item image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}
.list_item text{
  flex: 1;
}
.list_item view{
  width: 150rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  text-align: center;
  vertical-align: middle;
  font-size: 28rpx;
  color: #fff;
  background: #FF6029;
  margin-right: 20rpx;
}