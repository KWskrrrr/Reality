/* pages/replyDetail/replyDetail.wxss */
.firstComment{
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding:20rpx 15rpx;
}
.firstComment image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.name_content{
  display: flex;
  flex-direction: column;
}
.nickname{
  color: #ff6029;
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.commentTime{
  font-size: 25rpx;
  color: #999;
  margin-top: 20rpx;
}
.replyNum{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  display: inline-block;
  vertical-align: middle;
  border-left: 5rpx solid #ff6029;
  padding-left: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.replyWrap{
  border-top: 1rpx solid #eee;
  padding: 20rpx 15rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
}
.replyWrap image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}
.replyTime{
  font-size: 25rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.replyNickname{
  display: inline-block;
  margin-bottom: 15rpx;
}
/* 发表评论 */

.release {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 15rpx 0;
 border-top: 1rpx solid #eee;
  z-index: 999;
}
 
.replyinfo1{ 
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 64rpx;
}
.replyinfo2{ 
  width: 100%;
  height: 64rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
 
.release textarea {
  width: 80%;
  min-height: 64rpx;
  max-height: 128rpx; /*最多显示三行*/
  line-height: 64rpx;
  font-size: 28rpx;
  background-color: #eee;
  border-radius: 20rpx;
}
.release .submit {
  width: 15%;
  height: 64rpx;
  line-height: 64rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  background: #ff6029;
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
}