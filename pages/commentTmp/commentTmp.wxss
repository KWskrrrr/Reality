.commentWrap{
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.commentTmp_top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}
.commentTmp_top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.name_content{
  display: flex;
  flex-direction: column;
}
.name_content text:last-child{
  color: #999;
  font-size: 35rpx;
  margin-top: 10rpx;
}
.commentTmp_bottom{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-top: 40rpx;
}
.commentTmp_bottom image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}
.commentTime{
  flex: 1;
  color: #999;
  font-size: 25rpx;
  margin-left: 100rpx;
}
.commentReplyCount{
  color: #999;
  font-size: 25rpx;
  margin-right: 20rpx;
}
