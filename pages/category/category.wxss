/* pages/category/category.wxss */
.categoryWrap{
  width: 100%;
  height: 100%;
  display: flex;
}
.nav{
  width: 25%;
}
.nav-item{
  width: 100%;
  height: 110rpx;
  line-height: 110rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
}
.tab-on{
  border-left: 5rpx solid #ff6029;
  color: #ff6029;
  font-weight: bold;
}
.content{
  width: 70%;
}
.categoryItem{
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 150rpx;
  width: 100%;
  padding: 20rpx 2%;
  border-bottom: 1rpx solid #eee;
}
.categoryItem image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 15rpx;
}
.categoryItem .info{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-top: 10rpx;
}
.categoryItem .info view:nth-of-type(1){
  font-weight: bold;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.categoryItem .info view:nth-of-type(2){
  color: #999;
  font-size: 28rpx;
}
.categoryItem .info .address{
  color: #ff6029;
  margin: 20rpx 0;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.categoryItem .info .address image{
  width: 50rpx;
  height: 50rpx;
}
.categoryItem .info .address text{
  font-size: 30rpx;
  text-overflow: ellipsis;
}
.activityName{
  width: 120rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}
.locationName{
  width: 160rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow: ellipsis;
}