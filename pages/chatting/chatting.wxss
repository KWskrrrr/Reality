page {
  background-color: #f1f1f1;
}

.inputRoom {
  width: 100vw;
  height: 16vw;
  border-top: 1px solid #cdcdcd;
  background-color: #f1f1f1;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  z-index: 20;
}

input {
  width: 76vw;
  height: 9.33vw;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 2vw;
  margin-right: 1vw;
  padding: 0 3vw;
  font-size: 28rpx;
  color: #444;
}
.btnSendMsg{
  width: 12vw;
  height: 9vw;
  line-height: 9vw;
  margin-right: 2vw;
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  text-align: center;
  color: #fff;
  background: rgb(39, 204, 24);
  border: 2rpx solid rgb(62, 124, 57);
  border-radius: 20rpx;
}

.leftMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #fff;
  margin-left: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}

.rightMsg {
  font-size: 35rpx;
  color: #444;
  line-height: 7vw;
  padding: 2vw 2.5vw;
  background-color: #96EB6A;
  margin-right: -1.6vw;
  border-radius: 10rpx;
  z-index: 10;
}