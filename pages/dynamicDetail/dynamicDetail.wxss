/* pages/dynamicDetail/dynamicDetail.wxss */
.info{
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #eee;
}
.info image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 30rpx;
}
.text{
  flex: 1;
  display: flex;
  flex-direction: column;
}
.time{
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}
.content{
  width: 90%;
  margin: 0 auto;
}
.content_text{
  margin: 20rpx 0;
}
.picture{
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding-left: 2%;
  padding-right: 2%;
}
.picture image{ 
  box-sizing: border-box;
  background-color: white;
  flex: 0 0 28%;
  height: 200rpx;
  margin-top: 4%;
  margin-left: 2%;
  margin-right: 2%;
}
.address{
  color: #999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  margin-top: 30rpx;
}
.address image{
  width: 40rpx;
  height: 40rpx;
}
.like_comment{
  display: flex;
  justify-content: flex-end;
  margin-top: 30rpx;
  color: #999;
}
.like_comment image{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}
.like_comment text{
  font-size: 34rpx;
  margin-left: 5rpx;
}
.commentWrap{
  width: 100%;
  border-bottom: 1rpx solid #eee;
}
.commentTmp_top{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20rpx;
}
.commentTmp_top image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  margin-left: 20rpx;
}
.name_content{
  display: flex;
  flex-direction: column;
}
.name_content text:last-child{
  color: #999;
  font-size: 35rpx;
  margin-top: 10rpx;
}
.commentTmp_bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}
.commentTime{
  flex: 1;
  color: #999;
  font-size: 25rpx;
  margin-left: 100rpx;
}
.commentReplyCount {
  height: 25rpx;
  line-height: 25rpx;
  display: inline-block;
  vertical-align: middle;
  background: #eee;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
}
/* 发表评论 */

.release {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 15rpx 0;
 border-top: 1rpx solid #eee;
  z-index: 999;
}
 
.replyinfo1{ 
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  height: 64rpx;
}
.replyinfo2{ 
  width: 100%;
  height: 64rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
 
.release textarea {
  width: 80%;
  min-height: 64rpx;
  max-height: 128rpx; /*最多显示三行*/
  line-height: 64rpx;
  font-size: 28rpx;
  background-color: #eee;
  border-radius: 20rpx;
}
.release .submit {
  width: 15%;
  height: 64rpx;
  line-height: 64rpx;
  display: inline-block;
  vertical-align: middle;
  text-align: center;
  background: #ff6029;
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
}