.info{
  width: 100%;
  height: 140rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #eee;
  margin-bottom: 20rpx;
}
.info image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 20rpx;
}
.text{
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.time{
  font-size: 20rpx;
  color: #999;
  margin-top: 10rpx;
}
