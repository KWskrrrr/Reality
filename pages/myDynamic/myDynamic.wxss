    .content{
      width: 90%;
      margin: 0 auto;
      margin-bottom: 20rpx;
    }
    .content_text{
      margin: 20rpx 0;
    }
    .picture{
      width: 100%;
      display: flex;
      flex-flow: row wrap;
      align-content: flex-start;
      padding-left: 2%;
      padding-right: 2%;
    }
    .picture image{ 
      box-sizing: border-box;
      background-color: white;
      flex: 0 0 29%;
      height: 200rpx;
      margin-top: 4%;
      margin-left: 2%;
      margin-right: 2%;
    }
    .address{
      color: #999;
      font-size: 28rpx;
      display: flex;
      align-items: center;
      margin-top: 30rpx;
    }
    .address image{
      width: 40rpx;
      height: 40rpx;
    }
    .like_comment{
      display: flex;
      justify-content: flex-end;
      margin-top: 30rpx;
      color: #999;
    }
    .like_comment image{
      width: 40rpx;
      height: 40rpx;
      vertical-align: middle;
      margin-left: 10rpx;
    }
    .like_comment text{
      font-size: 28rpx;
      margin-left: 5rpx;
    }